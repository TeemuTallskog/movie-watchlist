{
  "manifest_version": 2,
  "name": "Movie Watchlist",
  "version": "0.1.1",
  "description": "Movie watchlist extension.",
  "permissions": [
    "storage",
    "webRequest",
    "*://v3.sg.media-imdb.com/*"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Movie Watchlist",
    "default_icon": {
      "48": "icons/logo-48.png",
      "96": "icons/logo-96.png",
      "128": "icons/logo-128.png"
    }
  },
  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png",
    "128": "icons/logo-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "movie-watchlist@github.com"
    }
  }
}